<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
<div class="row">
	<div class="col-md-4"></div>
	<div class='col-md-4'>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>
	</div>
	<div class="col-md-4"></div>
</div>
<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<hr>
		<%= f.submit 'Sign in', class: 'btn btn-large btn-primary' %>

		<p>New user? <%= link_to 'Sign up now!', signup_path %></p>
	</div>
	<div class="col-md-4"></div>
</div>
<% end %>
