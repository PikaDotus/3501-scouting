<h3>Team info</h3>

<%= f.hidden_field :scouter_email, value: current_user.email %>

<div class="separate">
	<%= f.label :team_number %>
	<input type="button" value="–" field="match[team_number]" class="qtyminus"/>
	<%= f.number_field :team_number, step: 1, min: 1, max: 6000 %>
	<input type="button" value="+" field="match[team_number]" class="qtyplus"/>
</div>

<div class="separate" style="margin-top:40px;">
	<%= f.label :match_number %>
	<input type="button" value="–" field="match[match_number]" class="qtyminus"/>
	<%= f.number_field :match_number, step: 1, min: 1, max: 200 %>
	<input type="button" value="+" field="match[match_number]" class="qtyplus"/>
</div>

<div style="margin-top:50px;">
	<%= f.label :match_type, "Match type", class: 'separate' %>
	<div class="btn-group btn-group-justified" data-toggle="buttons">
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :match_type, '1', value: 1, style: 'display:none' %>
				<%= f.label :match_type_practice, 'practice', class: 'no-bold' %>
			</button>
		</div>
		<div class='btn-group'>
			<button class='btn btn-default' type='button' data-toggle='button'>
				<%= f.radio_button :match_type, '2', value: 2, style: 'display:none' %>
				<%= f.label :match_type_qual, "qualification", class: 'no-bold' %>
			</button>
		</div>
		<div class='btn-group'>
			<button class='btn btn-default' type='button' data-toggle='button'>
				<%= f.radio_button :match_type, '3', value: 3, style: 'display:none' %>
				<%= f.label :match_type_elim, 'elimination', class: 'no-bold' %>
			</button>
		</div>
	</div>
</div>
