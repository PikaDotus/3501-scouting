<div class="col-md-4">
	<h3>Movement</h3>

	<%= f.label :speed, "Speed", class: 'separate' %>
	<div class="btn-group btn-group-justified" data-toggle='buttons'>
		<div class="btn-group">
			<button class="btn btn-default active" type="button" data-toggle="button">
				<%= f.radio_button :speed, '0', value: 0, style: 'display:none' %>
				<%= f.label :speed_zero, 'n/a', class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :speed, '1', value: 1, style: 'display:none;' %>
				<%= f.label :speed_very_slow, "v. slow", class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :speed, '2', value: 2, style: 'display:none;' %>
				<%= f.label :speed_slow, 'slow', class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :speed, '3', value: 3, style: 'display:none;' %>
				<%= f.label :speed_decent, 'decent', class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :speed, '4', value: 4, style: 'display:none;' %>
				<%= f.label :speed_fast, 'fast', class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.radio_button :speed, '5', value: 5, style: 'display:none;' %>
				<%= f.label :speed_very_fast, 'v. fast', class: 'no-bold' %>
			</button>
		</div>
	</div>

	<br>

	<%= f.label :driver_skill, "Driver skill", class: 'separate' %>
	<div class="btn-group btn-group-justified" data-toggle="buttons">
		<div class="btn-group">
			<button class="btn btn-default active" type="button" data-toggle="button">
				<%= f.radio_button :driver_skill, '0', value: 0, style: 'display:none' %>
				<%= f.label :drive_skill_zero, 'n/a', class: 'no-bold' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.label :driver_skill_poor, "poor", class: 'no-bold' %>
				<%= f.radio_button :driver_skill, '1', value: 1, style: 'display:none;' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.label :driver_skill_okay, 'okay', class: 'no-bold' %>
				<%= f.radio_button :driver_skill, '2', value: 2, style: 'display:none;' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.label :driver_skill_decent, 'decent', class: 'no-bold' %>
				<%= f.radio_button :driver_skill, '3', value: 3, style: 'display:none;' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.label :driver_skill_good, 'good', class: 'no-bold' %>
				<%= f.radio_button :driver_skill, '4', value: 4, style: 'display:none;' %>
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default" type="button" data-toggle="button">
				<%= f.label :driver_skill_great, 'great', class: 'no-bold' %>
				<%= f.radio_button :driver_skill, '5', value: 5, style: 'display:none;' %>
			</button>
		</div>
	</div>
	<br>

	<div class="separate">
		<%= f.label :no_show, "No show" %>
		<%= f.check_box :no_show %>
		<br>
		<%= f.label :dead, "Dead" %>
		<%= f.check_box :dead %>
	</div>
</div>
