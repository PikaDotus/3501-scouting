<div class="row">
	<div class="col-md-6">
		<h3>Defense (goalie)</h3>

		<div class="separate">
			<%= f.label :goalie_blocked, "Shots blocked – goalie" %>
			<%= f.number_field :goalie_blocked, step: 1, min: 0, max: 100 %>
			<br>
			<%= f.label :goalie_failed, "Shots allowed – goalie" %>
			<input type="button" value="–" field="match_goalie_failed" class="qtyminus"/>
			<%= f.number_field :goalie_failed, step: 1, min: 0, max: 100 %>
			<input type="button" value="+" field="match_goalie_failed" class="qtyplus"/>
		</div>
	</div>

	<div class="col-md-6">
		<h3>Defense</h3>

		<div class="separate">
			<%= f.label :pure_defense, "Pure defense" %>
			<%= f.check_box :pure_defense %>
			<br>
			<%= f.label :def_passes_interrupted, "Passes interrupted" %>
			<%= f.number_field :def_passes_interrupted, step: 1, min: 0, max: 100 %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<%= f.label :goalie_block_area, "Goal blocked by goalie", class: 'separate' %>
		<div class="btn-group btn-group-justified" data-toggle="buttons">
			<div class="btn-group">
				<button class="btn btn-default active" type="button" data-toggle="button">
					<%= f.radio_button :goalie_block_area, '0', value: 0, style: 'display:none' %>
					<%= f.label :goalie_block_area_zero, 'n/a', class: 'no-bold' %>
				</button>
			</div>
			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :goalie_block_area, '1', value: 1, style: 'display:none' %>
					<%= f.label :goalie_block_area_low_goal, "low goal", class: 'no-bold' %>
				</button>
			</div>
			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :goalie_block_area, '2', value: 2, style: 'display:none' %>
					<%= f.label :goalie_block_area_high_goal, 'high goal', class: 'no-bold' %>
				</button>
			</div>
			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :goalie_block_area, '3', value: 3, style: 'display:none' %>
					<%= f.label :goalie_block_area_both_goals, 'both goals', class: 'no-bold' %>
				</button>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<%= f.label :def_time_drain, "Time drain caused (on avg)", class: 'separate pull-bottom' %>
		<div class="btn-group btn-group-justified" data-toggle='buttons'>
			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :def_time_drain, '1', value: 1, style: 'display:none' %>
					<%= f.label :def_time_drain_1_sec, "1 sec", class: 'no-bold' %>
				</button>
			</div>
			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :def_time_drain, '2', value: 2, style: 'display:none' %>
					<%= f.label :def_time_drain_5_secs, '5 secs', class: 'no-bold' %>
				</button>
			</div>
			<div class='btn-group'>
					<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :def_time_drain, '3', value: 3, style: 'display:none' %>
					<%= f.label :def_time_drain_10_secs, '10 secs', class: 'no-bold' %>
				</button>
			</div>

			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :def_time_drain, '4', value: 4, style: 'display:none' %>
					<%= f.label :def_time_drain_15_secs, '15 secs', class: 'no-bold' %>
				</button>
			</div>

			<div class='btn-group'>
				<button class='btn btn-default' type='button' data-toggle='button'>
					<%= f.radio_button :def_time_drain, '5', value: 5, style: 'display:none' %>
					<%= f.label :def_time_drain_20_secs, '20 secs+', class: 'no-bold' %>
				</button>
			</div>
		</div>
	</div>
</div>
